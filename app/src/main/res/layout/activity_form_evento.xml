<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ActivityFormEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:drawablePadding="8dp"
                android:text="Creando evento"
                android:textColor="#4CAF50"
                android:textSize="34sp"
                android:textStyle="bold"
                app:fontFamily="@font/ceviche_one" />
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:labelFor="@id/edNombreEvento"
            android:text="Nombre del evento"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edNombreEvento"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="text"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edDescripcionEvento"
            android:text="Descripción del evento"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edDescripcionEvento"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="text"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edFechaEvento"
            android:text="Fecha del evento"
            android:focusable="false"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edFechaEvento"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="date"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edUbicacionEvento"
            android:text="Ubicación"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edUbicacionEvento"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="text"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edContactoEvento"
            android:text="Contacto"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edContactoEvento"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="text"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Foto del evento"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/subirFotoEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_rounded"
                />
            <ImageView
                android:id="@+id/subirIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                android:layout_margin="40dp" />
            <TextView
                android:id="@+id/subirTexto"
                android:paddingTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Subir imagen de la galería"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edPrecioEntrada"
            android:text="Precio de entrada"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/edPrecioEntrada"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="number"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/edLimiteCompra"
            android:text="Límite de compra"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edLimiteCompra"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_white_rounded"
            android:inputType="number"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buSiguiente"
            android:layout_width="310dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_green_rounded"
            android:text="Continuar"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>