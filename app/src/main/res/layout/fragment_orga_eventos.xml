    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizador.OrgaEventosFragment">

    <LinearLayout
        android:id="@+id/vista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
